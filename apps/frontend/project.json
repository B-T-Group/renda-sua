{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/frontend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "local",
      "options": {
        "target": "web",
        "compiler": "babel",
        "outputPath": "dist/apps/frontend",
        "main": "apps/frontend/src/main.tsx",
        "tsConfig": "apps/frontend/tsconfig.app.json",
        "index": "apps/frontend/src/index.html",
        "baseHref": "/",
        "assets": [
          "apps/frontend/src/favicon.ico",
          "apps/frontend/src/assets",
          {
            "input": "apps/frontend/public",
            "glob": "**/*",
            "output": "/"
          }
        ],
        "styles": ["apps/frontend/src/styles.css"],
        "isolatedConfig": true,
        "webpackConfig": "apps/frontend/webpack.config.js"
      },
      "configurations": {
        "local": {
          "optimization": false,
          "extractLicenses": false,
          "inspect": false,
          "fileReplacements": [],
          "outputHashing": "none"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/frontend/src/config/environment.ts",
              "with": "apps/frontend/src/config/environment.development.ts"
            }
          ],
          "outputHashing": "none"
        },
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/frontend/src/config/environment.ts",
              "with": "apps/frontend/src/config/environment.production.ts"
            }
          ],
          "outputHashing": "all"
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "defaultConfiguration": "local",
      "options": {
        "buildTarget": "frontend:build",
        "hmr": true,
        "liveReload": true,
        "open": true,
        "port": 4200
      },
      "configurations": {
        "local": {
          "buildTarget": "frontend:build:local",
          "hmr": true,
          "liveReload": true
        },
        "development": {
          "buildTarget": "frontend:build:development",
          "hmr": true,
          "liveReload": true
        },
        "production": {
          "buildTarget": "frontend:build:production",
          "hmr": false,
          "liveReload": false
        }
      }
    },
    "start": {
      "executor": "@nx/webpack:dev-server",
      "defaultConfiguration": "local",
      "options": {
        "buildTarget": "frontend:build"
      },
      "configurations": {
        "local": {
          "buildTarget": "frontend:build:local"
        },
        "development": {
          "buildTarget": "frontend:build:development"
        },
        "production": {
          "buildTarget": "frontend:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/frontend/jest.config.ts",
        "passWithNoTests": true,
        "setupFilesAfterEnv": ["<rootDir>/src/test-setup.ts"]
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/frontend/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "apps/frontend/tsconfig.app.json"
      }
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "apps/frontend/cypress.config.ts",
        "testingType": "e2e"
      },
      "configurations": {
        "local": {
          "devServerTarget": "frontend:serve:local"
        },
        "development": {
          "devServerTarget": "frontend:serve:development"
        },
        "production": {
          "devServerTarget": "frontend:serve:production"
        }
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/frontend/.storybook"
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "options": {
        "configDir": "apps/frontend/.storybook"
      }
    }
  },
  "tags": ["type:app", "scope:frontend"]
}
