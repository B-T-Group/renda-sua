{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/backend",
        "tsConfig": "apps/backend/tsconfig.app.json",
        "main": "apps/backend/src/main.ts",
        "generateLockfile": false,
        "generatePackageJson": true,
        "assets": [
          "apps/backend/src/**/*.json",
          "apps/backend/src/**/*.yaml",
          "apps/backend/src/**/*.yml"
        ]
      },
      "configurations": {
        "development": {
          "tsConfig": "apps/backend/tsconfig.app.json"
        },
        "production": {
          "tsConfig": "apps/backend/tsconfig.app.json"
        },
        "local": {
          "tsConfig": "apps/backend/tsconfig.app.json"
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "local",
      "options": {
        "buildTarget": "backend:build",
        "watch": true
      },
      "configurations": {
        "development": {
          "buildTarget": "backend:build:development",
          "watch": false
        },
        "production": {
          "buildTarget": "backend:build:production",
          "watch": false
        },
        "local": {
          "buildTarget": "backend:build:local",
          "watch": true
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node src/main.ts",
        "cwd": "apps/backend"
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "dependsOn": ["copy-deps"],
      "options": {
        "command": "docker build -f apps/backend/Dockerfile . -t rendasua-backend"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/backend/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.ts"]
      }
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "apps/backend/tsconfig.app.json",
        "main": "apps/backend/src/main.ts",
        "outputPath": "dist/apps/backend"
      }
    },
    "copy-deps": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cp package.json dist/apps/backend/ && cd dist/apps/backend && npm install --only=production --legacy-peer-deps",
        "parallel": false
      },
      "dependsOn": ["build"]
    }
  },
  "externalDependencies": [
    "@nestjs/core",
    "@nestjs/common",
    "@nestjs/platform-express",
    "reflect-metadata",
    "rxjs"
  ],
  "tags": []
}
